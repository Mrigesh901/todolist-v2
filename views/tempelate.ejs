
<%- include("header") -%>
    <div class="box" id ="heading">
     <h1>
     <%= listTitle %>
    </h1>
    </div>

    <div class="box">
        <% for(var i=0;i<itemlist.length;i++){ %> 
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name = "checkbox" onChange="this.form.submit()" value="<%=itemlist[i]._id %>">
                    <p>
                    <%= itemlist[i].name %> 
                    </p>
                </div>
                <input type="hidden" name="listName" value="<%=listTitle%>"></input>
            </form>
        <% } %>
       
        <form class="item" action="/" method="post">
            <input type="text" name = 'additem' placeholder="additem">
            <button type="submit" name="listtype" value="<%= listTitle%>">+</button>
        </form> 
    </div>


<%- include("footer"); -%>